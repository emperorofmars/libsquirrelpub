# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,mts,js,mjs}]
quote_type = double
ij_typescript_use_double_quotes = true

[*.md]
max_line_length = off
trim_trailing_whitespace = true

[*.{json,txt,yaml,yml}]
insert_final_newline = false
